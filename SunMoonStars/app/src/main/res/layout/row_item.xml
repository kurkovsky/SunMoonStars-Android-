<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/arial"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintBottom_toTopOf="@+id/tv_starttime"
        app:layout_constraintStart_toStartOf="@+id/tv_link"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Activity Name" />

    <TextView
        android:id="@+id/tv_starttime"
        android:layout_width="83dp"
        android:layout_height="21dp"
        android:fontFamily="@font/arial"

        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        app:layout_constraintStart_toStartOf="@+id/tv_link"
        app:layout_constraintTop_toBottomOf="@+id/tv_name"
        tools:text="start time" />

    <TextView
        android:id="@+id/tv_endtime"
        android:layout_width="90dp"
        android:layout_height="21dp"
        android:layout_marginStart="12dp"
        android:fontFamily="@font/arial"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/textView_until"
        app:layout_constraintTop_toBottomOf="@+id/tv_name"
        tools:text="end time" />

    <TextView
        android:id="@+id/textView_until"
        android:layout_width="wrap_content"
        android:layout_height="21dp"
        android:layout_marginStart="6dp"
        android:fontFamily="@font/arial"
        android:text="until"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/tv_starttime"
        app:layout_constraintTop_toBottomOf="@+id/tv_name" />

    <TextView
        android:id="@+id/tv_description"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="14dp"
        android:layout_marginTop="2dp"
        android:layout_marginRight="20dp"
        android:layout_marginEnd="14dp"
        android:autoSizeTextType="uniform"
        android:fontFamily="@font/arial"
        android:text="description"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_endtime" />

    <TextView
        android:id="@+id/tv_location"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="14dp"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/arial"
        android:autoSizeTextType="uniform"
        android:text="location"
        app:layout_constraintStart_toStartOf="@+id/tv_link"
        app:layout_constraintTop_toBottomOf="@+id/tv_description" />

    <TextView
        android:id="@+id/tv_link"
        android:layout_width="377dp"
        android:layout_height="17dp"
        android:layout_marginStart="14dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="16dp"
        android:fontFamily="@font/arial"
        android:text="Click Me to Sign Up"
        android:textColor="@color/design_default_color_primary_dark"
        android:typeface="normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_location"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:fontFamily="@font/arial"
        android:text="Date"
        app:layout_constraintHorizontal_bias="0.885"
        app:layout_constraintStart_toEndOf="@+id/tv_endtime"
        app:layout_constraintTop_toBottomOf="@+id/tv_name" />

    <TextView
        android:id="@+id/tv_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="1dp"
        android:fontFamily="@font/arial"
        android:text="Price"
        app:layout_constraintStart_toStartOf="@+id/tv_description"
        app:layout_constraintTop_toBottomOf="@+id/tv_description" />

    <TextView
        android:id="@+id/tv_priceper"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:fontFamily="@font/arial"
        android:text="priceper"
        app:layout_constraintStart_toEndOf="@+id/tv_price"
        app:layout_constraintTop_toBottomOf="@+id/tv_description" />

    <TextView
        android:id="@+id/tv_money1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:fontFamily="@font/arial"
        android:text="$"
        app:layout_constraintStart_toStartOf="@+id/tv_link"
        app:layout_constraintTop_toBottomOf="@+id/tv_description" />

</androidx.constraintlayout.widget.ConstraintLayout>